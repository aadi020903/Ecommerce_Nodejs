						<div class="content-body">
							<!-- row -->
							<div class="container-fluid">
								<!-- row -->
								<div class="row row_1">

									<div class="col-xl-9 col-lg-8">
										<div class="card profile-card card-bx m-b30">
											<div class="card-header">
												<h6 class="title">Product Details : </h6>
											</div>
											
											<form class="profile-form" action="/product_added" method="post"
												enctype="multipart/form-data">
												<input type="hidden" name="FolderName" value="products">
												<div class="card-body">
													<div class="row">
														<div class="col-sm-6 m-b30">
															<label class="form-label">Product Name</label>
															<input type="text" class="form-control" name="name">
														</div>
														<div class="col-sm-6 m-b30">
															<label class="form-label">Subname</label>
															<input type="text" class="form-control" name="subname">
														</div>
														<div class="col-sm-6 m-b30">
															<label class="form-label">Brand</label>
															<input type="text" class="form-control" name="brand">
														</div>
														<div class="col-sm-6 m-b30">
															<label class="form-label">Category </label>
															<select class="default-select form-control categorySelect" onchange="sendReq()"
																id="validationCustom05" name="category">
																<option data-display="Select">Please select</option>
																<% category_data.forEach(element=> { %>
																	<option>
																		<%= element.category_name %>
																	</option>
																	<%}); %>
															</select>
														</div>

														<div class="col-sm-6 m-b30 ">

															<label class="form-label">Sub-Category</label>
															<select class="default-select subCategorySelect form-control"
																id="validationCustom05" name="sub_category">
																<option class="" data-display="Select">Please select
																</option>

															</select>
														</div>
														<div class="col-sm-6 m-b30">
															<label class="form-label">Delivery Category</label>
															<select class="default-select form-control"
																id="validationCustom05" name="delivery_category">
																<option data-display="Select">Please select</option>
																<option value="light">Light</option>
																<option value="medium">Medium</option>
																<option value="heavy">Heavy</option>
															</select>
														</div>
														<div class="col-sm-6 m-b30">
															<label class="form-label">M.R.P ₹</label>
															<input type="number" class="form-control" name="mrp" id="originalPrice">
														</div>
														<div class="col-sm-6 m-b30">
															<label class="form-label">Discount %</label>
															<input type="number" class="form-control" name="discount" id="discountPercentage" oninput="calculateDiscount()">
														</div>
														<div class="col-sm-6 m-b30">
															<label class="form-label">Price ₹</label>
															<input type="number" class="form-control" name="price" id="discountPrice">
														</div>

														<div class="col-sm-6 m-b30">
															<label class="form-label">Quantity</label>
															<input type="number" class="form-control" name="quantity">
														</div>
														<div class="col-sm-6 m-b30">
															<label class="form-label">Size</label>
															<input type="text" class="form-control" name="size">
														</div>
														<div class="col-sm-6 m-b30">
															<label class="form-label">Color</label>
															<input type="text" class="form-control" name="color">
														</div>
														<div class="col-sm-6 m-b30">
															<label class="form-label">Description</label>
															<input type="text" class="form-control" name="description">
														</div>
														<div class="col-sm-6 m-b30">
                                            <label class="form-label">Main Photo</label>
											<input type="file" class="form-control" name="main_photo">
										</div>
															<div class="col-sm-6 m-b30">
																<label class="form-label">Photos ( upto 4 )</label>
																<input type="file" class="form-control" name="photos"
																	multiple>
															</div>

														</div>
													</div>
													<div class="card-footer">
														<button class="btn btn-primary">ADD PRODUCT</button>
													</div>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
						<script>

							

							function calculateDiscount() {
								var originalPrice = parseFloat(document.getElementById('originalPrice').value);
								var discountPercentage = parseFloat(document.getElementById('discountPercentage').value);
								// var discountPercentage = parseFloat(document.getElementById('discountPrice').value);
								// Validate input
								if (isNaN(originalPrice) || isNaN(discountPercentage)) {
									alert('Please enter valid numbers');
									return;
								}
					
								// Calculate discounted price
								var discountedPrice = originalPrice - (originalPrice * discountPercentage / 100);
								console.log(discountedPrice);
								// Update the result on the page
								const disprice=document.getElementById("discountPrice");
								// console.log(disprice);
								disprice.value=discountedPrice;
							}
						</script>
